# Application
ENV=development
DEBUG=true
PORT=8000

# API Configuration
API_V1_PREFIX=/api/v1

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO

# Security
BLOCK_PRIVATE_NETWORKS=true
ALLOWED_URL_SCHEMES=http,https

# yt-dlp Speed Optimization (defaults shown - customize as needed)
# YTDLP_CONCURRENT_FRAGMENTS=8
# YTDLP_THROTTLED_RATE=100K
# YTDLP_BUFFER_SIZE=128K
# YTDLP_HTTP_CHUNK_SIZE=50M
# YTDLP_SOCKET_TIMEOUT=30
# YTDLP_RETRIES=10
# YTDLP_FRAGMENT_RETRIES=10
# YTDLP_EXTRACTOR_RETRIES=3
# YTDLP_STREAM_CHUNK_SIZE=16777216

# Advanced yt-dlp Options (experimental - test before enabling)
# YTDLP_USE_IOS_CLIENT=false              # Use iOS client for YouTube (less throttled)
# YTDLP_COOKIES_FROM_BROWSER=chrome       # Extract cookies from browser (chrome, firefox, edge)
# YTDLP_USE_ARIA2C=false                  # Use aria2c for faster downloads (requires aria2c installed)
# YTDLP_ARIA2C_MAX_CONNECTIONS=16

# 2026 Best Practices for Maximum Speed
# YTDLP_USE_DASH_FORMATS=true             # Force DASH formats (less throttled on YouTube)
# YTDLP_PROXY=                            # HTTP/HTTPS/SOCKS proxy URL (e.g., http://proxy:8080)

# Formats Cache
# YTDLP_FORMATS_CACHE_TTL_SECONDS=600
# YTDLP_FORMATS_CACHE_MAXSIZE=128
